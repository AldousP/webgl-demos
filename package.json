{
  "name": "webgl-demos",
  "version": "1.0.0",
  "description": "webgl experiments",
  "repository": "https://github.com/AldousP/webgl-demos",
  "author": "Aldous",
  "license": "MIT",
  "scripts": {
    "start": "node_modules/.bin/webpack-dev-server -d",
    "build": "node_modules/.bin/webpack -p --progress --colors",
    "build-docs": "typedoc --out docs src/ts",
    "test": "tsc test/*.ts --lib es2015 && ava",
    "test-dev": "concurrently \"tsc -w test/*.ts --lib es2015 \" \"ava --watch\""
  },
  "devDependencies": {
    "@types/gl-matrix": "^2.3.2",
    "@types/node": "^8.0.46",
    "ava": "^0.22.0",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "gl-matrix": "^2.4.0",
    "html-webpack-plugin": "^2.30.1",
    "shader-loader": "^1.3.1",
    "style-loader": "^0.19.0",
    "ts-loader": "^3.0.5",
    "url-loader": "^0.6.2",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-glsl-loader": "^1.0.1"
  },
  "dependencies": {
    "typedoc": "^0.9.0",
    "typescript": "^2.5.3"
  },
  "ava": {
    "source": [
      "test/*.js",
      "!test/*.ts"
    ]
  }
}
